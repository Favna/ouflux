{
	"name": "@skyra/outflux",
	"description": "Microservice for Skyra to take screenshots of the InfluxDB Dashboard using Puppeteer",
	"version": "1.0.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@skyra",
	"license": "MIT",
	"maintainers": [
		{
			"name": "Nejc Drobnic",
			"url": "https://github.com/QuantumlyTangled"
		}
	],
	"private": true,
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"update": "yarn upgrade-interactive --latest",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"cloud:start": "node index.js"
	},
	"dependencies": {
		"@sentry/node": "^5.20.1",
		"fastify": "^3.1.1",
		"fastify-bearer-auth": "^5.0.1",
		"fastify-piscina": "^2.0.0",
		"module-alias": "^2.2.2",
		"piscina": "^1.6.3",
		"puppeteer": "^5.2.1"
	},
	"devDependencies": {
		"@skyra/eslint-config": "^5.2.1",
		"@types/module-alias": "^2.0.0",
		"@types/node": "^14.0.26",
		"@types/puppeteer": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"eslint": "^7.5.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"typescript": "^3.9.7"
	},
	"_moduleAliases": {
		"@lib": "dist/lib",
		"@root": "dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/outflux.git"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=6"
	},
	"keywords": [
		"influxdb",
		"typescript",
		"ts",
		"yarn",
		"puppeteer",
		"skyra",
		"microservice"
	],
	"bugs": {
		"url": "https://github.com/skyra-project/outflux/issues"
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.2",
		"kind-of": "^6.0.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
